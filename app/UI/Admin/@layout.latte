<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Autoškola PRIMA - Kvalitní výuka řidičských kurzů v Teplicích a Bílině.">
    <title>Autoškola PRIMA</title>
    {block css}
    {/block}
    <!-- Preload critical CSS -->
    <link rel="preload" href="/css/layout.css" as="style">
    <link rel="stylesheet" href="/css/layout.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>

</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
      <div class="container">
        <a class="navbar-brand" n:href=":Front:Home:default">Autoškola PRIMA</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Přepnout navigaci">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a class="nav-link" n:href=":Front:Home:default">Domů</a></li>
          </ul>
          <!-- Dropdown for logged-in user -->
          <div n:if="$user->isLoggedIn()" class="ms-3">
            <div class="dropdown">
              <a class="btn btn-secondary dropdown-toggle" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                 {$user->identity->username}
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li><a class="dropdown-item text-primary" n:href=":Front:Home:default">Domů</a></li>
                <li><a class="dropdown-item text-danger" n:href=":Front:Sign:out">Odhlásit se</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </nav>

    {if $flashes}
      {foreach $flashes as $flash}
        <div class="alert alert-{$flash->type} alert-dismissible fade show" role="alert">
          {$flash->message}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zavřít"></button>
        </div>
      {/foreach}
    {/if}

    <!-- Main Content -->
    <main class="container mt-5">
        {include content}
    </main>

    <!-- Bootstrap JS (deferred) -->
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>